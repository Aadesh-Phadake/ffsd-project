<% layout('./layouts/boilerplate') %>
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <h1 class="mb-4">Customer Service</h1>
            
            <div class="alert alert-primary text-center">
                <h4><i class="fas fa-headset me-2"></i>24/7 Customer Support</h4>
                <p class="mb-0">Our dedicated support team is available around the clock to assist you with any questions or concerns.</p>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h4><i class="fas fa-phone text-primary me-2"></i>Phone Support</h4>
                            <p class="text-muted">Speak directly with our support representatives</p>
                            <p><strong>Phone:</strong> <a href="tel:+15551234567">+1 (555) 123-4567</a></p>
                            <p class="text-muted mb-0">Available 24/7 for urgent matters</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h4><i class="fas fa-envelope text-primary me-2"></i>Email Support</h4>
                            <p class="text-muted">Get detailed assistance via email</p>
                            <p><strong>Email:</strong> <a href="mailto:support@travelnest.com">support@travelnest.com</a></p>
                            <p class="text-muted mb-0">Response within 24 hours</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h3 class="text-primary mb-3">How We Can Help</h3>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-3">
                                    <i class="fas fa-calendar-alt text-primary me-2"></i>
                                    <strong>Booking Assistance</strong>
                                    <p class="text-muted mb-0">Help with making, modifying, or canceling reservations</p>
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-credit-card text-primary me-2"></i>
                                    <strong>Payment Issues</strong>
                                    <p class="text-muted mb-0">Resolve payment problems and billing questions</p>
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                    <strong>Property Information</strong>
                                    <p class="text-muted mb-0">Details about hotels, amenities, and locations</p>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-3">
                                    <i class="fas fa-user-cog text-primary me-2"></i>
                                    <strong>Account Support</strong>
                                    <p class="text-muted mb-0">Account setup, password reset, profile updates</p>
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-exclamation-triangle text-primary me-2"></i>
                                    <strong>Complaints & Issues</strong>
                                    <p class="text-muted mb-0">Report problems and seek resolution</p>
                                </li>
                                <li class="mb-3">
                                    <i class="fas fa-star text-primary me-2"></i>
                                    <strong>Membership Benefits</strong>
                                    <p class="text-muted mb-0">Information about premium membership perks</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h3 class="text-primary mb-3">Emergency Contact</h3>
                    <p>If you're already traveling and need immediate assistance:</p>
                    <div class="alert alert-warning">
                        <i class="fas fa-phone me-2"></i>
                        <strong>Emergency Hotline:</strong> +1 (555) 911-HELP
                        <br>
                        <small>Available 24/7 for urgent travel-related issues</small>
                    </div>
                </div>
            </div>
            
            <div class="card shadow-sm bg-light">
                <div class="card-body text-center">
                    <h4>Quick Links</h4>
                    <div class="d-flex flex-wrap justify-content-center gap-2 mt-3">
                        <a href="/faq" class="btn btn-outline-primary btn-sm">FAQ</a>
                        <a href="/help" class="btn btn-outline-primary btn-sm">Help Center</a>
                        <a href="/booking-help" class="btn btn-outline-primary btn-sm">Booking Help</a>
                        <a href="/contact" class="btn btn-outline-primary btn-sm">Contact Form</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>