<% layout('./layouts/boilerplate') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h3 class="card-title mb-0">Hotel Manager Dashboard</h3>
                </div>
                <div class="card-body">
                    <% if (currentUser) { %>
                        <p class="mb-4">Welcome, <%= currentUser.username %>!</p>
                    <% } %>

                    <% if (bookings && bookings.length > 0) { %>
                        <h5 class="mb-3">Recent Bookings</h5>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Hotel</th>
                                        <th>Guest</th>
                                        <th>Check-in</th>
                                        <th>Check-out</th>
                                        <th>Guests</th>
                                        <th>Amount</th>
                                        <th>Booked On</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% bookings.forEach(booking => { %>
                                        <tr>
                                            <td><%= booking.listing ? booking.listing.title : 'N/A' %></td>
                                            <td><%= booking.user ? booking.user.username : 'N/A' %></td>
                                            <td><%= booking.checkIn %></td>
                                            <td><%= booking.checkOut %></td>
                                            <td><%= booking.guests %></td>
                                            <td>â‚¹<%= booking.totalAmount || 0 %></td>
                                            <td><%= new Date(booking.createdAt).toLocaleDateString() %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="alert alert-info">
                            <h5>No bookings found</h5>
                            <p>You don't have any bookings for your listings yet.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>