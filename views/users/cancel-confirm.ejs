<% layout('./layouts/boilerplate') %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="mb-4">Confirm Cancellation</h4>
                    
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Are you sure you want to cancel this booking?
                    </div>

                    <div class="booking-details mb-4">
                        <h5>Booking Details</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Property:</strong> <%= booking.listing ? booking.listing.title : 'Property unavailable' %></p>
                                <p><strong>Check-in:</strong> <%= booking.checkIn %></p>
                                <p><strong>Check-out:</strong> <%= booking.checkOut %></p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Guests:</strong> <%= booking.guests %></p>
                                <p><strong>Total Amount:</strong> ₹<%= booking.totalAmount.toLocaleString("en-IN") %></p>
                            </div>
                        </div>
                    </div>

                    <div class="cancellation-fee mb-4">
                        <h5>Cancellation Fee</h5>
                        <% if (cancellationDetails.canUseFreeCancellation) { %>
                            <div class="alert alert-success">
                                <i class="fas fa-gift me-2"></i>
                                <strong>Free Cancellation!</strong> You have <%= 2 - currentUser.freeCancellationsUsed %> free cancellations remaining this month.
                            </div>
                            <p class="text-success"><strong>Cancellation Fee: ₹0</strong></p>
                        <% } else { %>
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                <% if (currentUser.isMember && currentUser.membershipExpiresAt && new Date(currentUser.membershipExpiresAt) > new Date()) { %>
                                    You have used all 2 free cancellations this month.
                                <% } else { %>
                                    Non-members are charged a 10% cancellation fee.
                                <% } %>
                            </div>
                            <p class="text-danger"><strong>Cancellation Fee: ₹<%= cancellationDetails.cancellationFee.toLocaleString("en-IN") %></strong></p>
                        <% } %>
                    </div>

                    <div class="d-flex gap-2">
                        <form action="/profile/cancel/confirm/<%= booking._id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-times me-2"></i>
                                Confirm Cancellation
                            </button>
                        </form>
                        <a href="/profile" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Back to Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
