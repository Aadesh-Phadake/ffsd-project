<%- layout('./layouts/boilerplate') %>

<div class="py-5">
  <h2 class="text-center fw-bold mb-4" style="color:#1570ef">Contact Me</h2>

  <div class="row g-4 align-items-start justify-content-center">
    <div class="col-12 col-lg-6">
      <form action="/contact" method="POST" class="p-3 p-sm-4 bg-white rounded-3 border shadow-sm">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Your Name" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="you@example.com" required>
        </div>
        <div class="mb-4">
          <label for="message" class="form-label">Message</label>
          <textarea id="message" name="message" rows="5" class="form-control" placeholder="Type your message here..." required></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100" style="background:#1570ef;border-color:#1570ef">Send Message</button>
      </form>
    </div>

    <div class="col-12 col-lg-4">
      <div class="ps-lg-3 text-center text-lg-start">
        <p class="mb-2 fw-semibold">Connect with me</p>
        <div class="d-flex gap-3 justify-content-center justify-content-lg-start fs-3" style="color:#1570ef">
          <a class="text-decoration-none" style="color:#1570ef" href="#" aria-label="GitHub"><i class="fab fa-github"></i></a>
          <a class="text-decoration-none" style="color:#1570ef" href="#" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
          <a class="text-decoration-none" style="color:#1570ef" href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
          <a class="text-decoration-none" style="color:#1570ef" href="#" aria-label="X"><i class="fab fa-x-twitter"></i></a>
          <a class="text-decoration-none" style="color:#1570ef" href="mailto:support@travelnest.com" aria-label="Email"><i class="fas fa-envelope"></i></a>
        </div>
      </div>
    </div>
  </div>
</div>
